{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('{{asset('template/assets/images/backgrounds/login-bg.jpg')}}')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="signin-tab-2" data-toggle="tab" href="#signin-tab-2" role="tab" aria-controls="signin-tab-2" aria-selected="false">Connexion</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="signin-tab-2" role="tabpanel" aria-labelledby="signin-tab-2">
                            <form method="post">
                                {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <div class="form-group">
                                    <label for="singin-email-2">Adresse email *</label>
                                    <input type="email" class="form-control" id="singin-email-2" name="_username" required>
                                </div>
                                <!-- End .form-group -->

                                <div class="form-group">
                                    <label for="singin-password-2">Mot de passe *</label>
                                    <input type="password" class="form-control" id="singin-password-2" name="_password" required>
                                </div>
                                <!-- End .form-group -->
                                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                                <div class="form-footer">
                                    <button type="submit" class="btn btn-outline-primary-2">
                                        <span>Se connecter</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>

                                    <a href="{{path('app_forgot_password_request')}}" class="forgot-link">Mot de passe oubli√© ?</a>
                                </div>
                                <!-- End .form-footer -->
                            </form>
                        </div>
                    </div>
                    <!-- End .tab-content -->
                </div>
                <!-- End .form-tab -->
            </div>
            <!-- End .form-box -->
        </div>
        <!-- End .container -->
    </div>

{% endblock %}
