{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
 <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('{{asset('template/assets/images/backgrounds/login-bg.jpg')}}')">
        <div class="container">
            <div class="form-box">
                <h3>Réinitialiser le mot de passe</h3>

                {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}
