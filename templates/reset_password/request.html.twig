{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
 <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('{{asset('template/assets/images/backgrounds/login-bg.jpg')}}')">
    <div class="container">
        <div class="form-box">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <h3>Réinitialiser le mot de passe</h3>
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Entrez votre adresse email, et nous vous enverrons un
                        lien de réinitialisation.
                    </small>
                </div>

                <button class="btn btn-primary mt-4">Envoyer</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
</div>
{% endblock %}
